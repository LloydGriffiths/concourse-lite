{
  "variables": {
    "version": "0"
  },
  "builders": [{
    "type": "virtualbox-iso",

    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
    "iso_checksum": "0501c446929f713eb162ae2088d8dc8b6426224a",
    "iso_checksum_type": "sha1",

    "guest_os_type": "Ubuntu_64",
    "guest_additions_path": "/home/vagrant/VBoxGuestAdditions.iso",
    "virtualbox_version_file": ".vbox_version",

    "headless": "true",

    "boot_wait": "10s",
    "boot_command": [
      "<esc><wait>",
      "<esc><wait>",
      "<enter><wait>",
      "/install/vmlinuz<wait>",
      " auto<wait>",
      " console-setup/ask_detect=false<wait>",
      " console-setup/layoutcode=us<wait>",
      " console-setup/modelcode=pc105<wait>",
      " debconf/frontend=noninteractive<wait>",
      " debian-installer=en_US<wait>",
      " fb=false<wait>",
      " initrd=/install/initrd.gz<wait>",
      " kbd-chooser/method=us<wait>",
      " keyboard-configuration/layout=USA<wait>",
      " keyboard-configuration/variant=USA<wait>",
      " locale=en_US<wait>",
      " netcfg/get_domain=vm<wait>",
      " netcfg/get_hostname=ubuntu<wait>",
      " noapic<wait>",
      " nomodeset<wait>",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
      " -- <wait>",
      "<enter><wait>"
    ],

    "http_directory": "http",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "60m",

    "disk_size": 80000,

    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

    "vboxmanage": [
      [ "modifyvm", "{{ .Name }}", "--memory", "1024" ],
      [ "modifyvm", "{{ .Name }}", "--cpus", "1" ]
    ]
  }],

  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E {{ .Path }}",
    "scripts": [
      "scripts/update-resolv.conf.sh",
      "scripts/quiet-tty-warning.sh",
      "scripts/apt-update.sh",
      "scripts/update-trusty-kernel.sh",
      "scripts/vbox-guest-additions.sh",
      "scripts/kernel-cleanup.sh",
      "scripts/admin-sudoers.sh",
      "scripts/increase-loop-devices.sh",
      "scripts/setup-syslog.sh"
    ]
  },{
    "type": "shell",
    "scripts": [ "scripts/vagrant-pub-key.sh" ]
  },{
    "type": "shell",
    "inline": "echo 'vagrant' | sudo -S usermod -a -G admin vagrant"
  },{
    "type": "file",
    "source": "concourse.tgz",
    "destination": "/tmp/concourse.tgz"
  },{
    "type": "file",
    "source": "garden-linux.tgz",
    "destination": "/tmp/garden-linux.tgz"
  },{
    "type": "packer-bosh",
    "assets_dir": "/opt/local/go/src/github.com/cppforlife/packer-bosh/bosh-provisioner/assets",
    "manifest_path": "concourse_manifest.yml",
    "ssh_password": "vagrant"
  },{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E {{ .Path }}",
    "remote_path": "/opt/bosh-provisioner/packer-shell.sh",
    "scripts": [
      "scripts/add-vcap-to-vagrant.sh",
      "scripts/set-temp-dir.sh",
      "scripts/clean-up.sh",
      "scripts/clean-up-garden.sh",
      "scripts/shrink-disk.sh"
    ]
  }],

  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": true,
    "vagrantfile_template": "templates/vagrant-local.tpl",
    "output": "concourse-{{ .Provider }}-ubuntu-trusty-{{user `version`}}.box"
  }]
}
